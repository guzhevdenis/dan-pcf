<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.iter.codac.units</groupId>
    <artifactId>DAN-sample</artifactId>
    <packaging>codac</packaging>
    <version>2.0.0</version>
    <name>CODAC Core System DAN-sample subsystem</name>
    <description>CODAC Core System DAN-sample subsystem</description>
    <url>http://www.iter.org/</url>
 
    <!-- project properties -->
    <properties>
        <unit.type>subsystem</unit.type>
        <project.type>iandc</project.type>
    </properties>

    <!-- parent pom.xml -->
    <parent>
        <groupId>org.iter.codac.units</groupId>
        <artifactId>maven-iter-settings</artifactId>
        <version>6.3.0</version>
    </parent>

    <!-- unit owner and developers -->
    <developers>
        <developer>
            <id>codac-dev</id>
            <roles>
                <role>unit owner</role>
            </roles>
        </developer>
    </developers>

    <!-- configuration of how the project is built -->
    <build>
        <!-- default phase is compile -->
        <defaultGoal>compile</defaultGoal>
        <!-- this command is executed if you just write 'mvn' -->
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-iter-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <packaging>
                        <package name="opi">
                            <include file="*" type="boy" />
                            <include file="ITER.opi" topopi="true" type="boy" />
                            <include file="*" type="databrowser" />
                        </package>
                        <package name="scan">
                            <include file="*" type="scan" />
                        </package>
                        <package name="D1-FCT0-PCF0CORE-ioc">
                            <include name="D1-FCT0-PCF0CORE" type="ioc" />
                        </package>
                        <package name="D1-FCT0-PCF0SYSM-ioc">
                            <include name="D1-FCT0-PCF0SYSM" type="ioc" />
                        </package>
                        <package name="D1-FCT0-PSH0CORE-ioc">
                            <include name="D1-FCT0-PSH0CORE" type="ioc" />
                        </package>
                        <package name="D1-FCT0-PSH0SYSM-ioc">
                            <include name="D1-FCT0-PSH0SYSM" type="ioc" />
                        </package>
                        <package name="alarm">
                            <include configuration="D1-beast.xml" type="beast" />
                        </package>
                        <package name="archive">
                            <include configuration="D1-beauty.xml" type="beauty" />
                        </package>
                        <package name="MyFirstDANProgram">
                            <include name="MyFirstDANProgram" exectype="codac-service" type="program" />
                            <requires codac="true" buildonly="true">codac-unit-templates</requires>
                            <include program="MyFirstDANProgram" type="danstreamer" />
                        </package>
                    </packaging>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
